@using ASP.Server.Model
@model Auteur
@{
    ViewData["Title"] = "Author Details";
}



<section class="cars-list-wrapper section">

    <!-- BEGIN: Page Main-->
    <div id="main" style="padding-left:0px">
        <div class="row">
            <div class="col s12">
                <div class="container">
                    <!-- knowledge -->
                    <div class="section" id="knowledge">
                        <div class="row knowledge-content">
                                <div class="col s12 m4">
                                    <div class="card card-hover z-depth-0 card-border-gray">
                                        <div class="card-content center-align">
                                            <h5><b>Age</b></h5>
                                            <i class="material-icons md-48 black-text">timelapse</i>
                                            <p class="mb-2 black-text"><b>@Model.Age</b></p>
                                        </div>
                                    </div>
                                </div>

                                <div class="col s12 m4">
                                    <div class="card card-hover z-depth-0 card-border-gray">
                                        <div class="card-content center-align">
                                            <h5><b>Author Name</b></h5>
                                            <i class="material-icons md-48 blue-text">account_circle</i>
                                            <p class="mb-2 blue-text"><b>@Model.Name</b></p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col s12 m4">
                                    <div class="card card-hover z-depth-0 card-border-gray">
                                        <div class="card-content center-align">
                                            <h5><b>Total Books</b></h5>
                                            <i class="material-icons md-48 orange-text">loop</i>
                                            <p class="mb-2 black-text">
                                                <div class="chip orange darken-4 white-text z-depth-1">
                                                    @ViewBag.BooksTotal
                                                </div>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                </div>
                <div class="content-overlay"></div>
            </div>
        </div>
    </div>
</section>