@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div class="row">
        <div class="col s12 m6 l6 xl3">
            <div class="card gradient-45deg-light-blue-cyan gradient-shadow min-height-100 white-text animate fadeLeft">
                <div class="padding-4">
                    <div class="row">
                        <div class="col s7 m7">
                            <i class="material-icons background-round mt-5">book</i>
                            <p>Books</p>
                        </div>
                        <div class="col s5 m5 right-align">
                            <h5 class="mb-0 white-text">@ViewBag.TotalBooks</h5>
                            <p class="no-margin">New</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col s12 m6 l6 xl3">
            <div class="card gradient-45deg-red-pink gradient-shadow min-height-100 white-text animate fadeLeft">
                <div class="padding-4">
                    <div class="row">
                        <div class="col s7 m7">
                            <i class="material-icons background-round mt-5">perm_identity</i>
                            <p>Authors</p>
                        </div>
                        <div class="col s5 m5 right-align">
                            <h5 class="mb-0 white-text">@ViewBag.TotalAuthors</h5>
                            <p class="no-margin">New</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col s12 m6 l6 xl3">
            <div class="card gradient-45deg-amber-amber gradient-shadow min-height-100 white-text animate fadeRight">
                <div class="padding-4">
                    <div class="row">
                        <div class="col s7 m7">
                            <i class="material-icons background-round mt-5">timeline</i>
                            <p>Categories</p>
                        </div>
                        <div class="col s5 m5 right-align">
                            <h5 class="mb-0 white-text">@ViewBag.TotalCategories</h5>
                            <p class="no-margin">Total</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col s12 m6 l6 xl3">
            <div class="card gradient-45deg-green-teal gradient-shadow min-height-100 white-text animate fadeRight">
                <div class="padding-4">
                    <div class="row">
                        <div class="col s7 m7">
                            <i class="material-icons background-round mt-5">attach_money</i>
                            <p>All budget</p>
                        </div>
                        <div class="col s5 m5 right-align">
                            <h5 class="mb-0 white-text">$ @ViewBag.TotalProfit</h5>
                            <p class="no-margin">All books</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col s12 m3">
            
        </div>
        <div class="col s12 m3">
            <div class="card gradient-shadow gradient-45deg-red-pink border-radius-3 animate fadeUp">
                <a href="/Book/View/@ViewBag.BookMinWordCountId">
                    <div class="card-content center">
                        <img src="../../../app-assets/images/icon/printer.png" class="width-40 border-round z-depth-5 responsive-img" alt="images">
                        <h5 class="white-text lighten-4">@ViewBag.BookMinWordCountName</h5>
                        <h6>@ViewBag.BookMinWordCountWC Words</h6>
                        <p class="white-text lighten-4">Book with Min Word Count</p>
                    </div>
                </a>
            </div>
        </div>
        <div class="col s12 m3">
            <div class="card gradient-shadow gradient-45deg-amber-amber border-radius-3 animate fadeUp">
                <a href="/Book/View/@ViewBag.BookMaxWordCountId">
                    <div class="card-content center">
                        <img src="../../../app-assets/images/icon/laptop.png" class="width-40 border-round z-depth-5 responsive-img" alt="image">
                        <h5 class="white-text lighten-4">@ViewBag.BookMaxWordCountName</h5>
                        <h6>@ViewBag.BookMaxWordCountWC Words</h6>
                        <p class="white-text lighten-4">Book with MAX Word Count</p>
                    </div>
                </a>
            </div>
        </div>
        <div class="col s12 m3">
            
        </div>
    </div>
</div>


